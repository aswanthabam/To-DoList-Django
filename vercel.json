{
  "version": 2,
  "headers": {
    "source": "/(.*)",
    "headers": [
      {
        "key":"Cache-Control",
        "value":"public, max-age=0, must-revalidate"
      }
    ]
  },
  "builds": [
    {
      "src": "todolist/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "buildscript.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "todolist/wsgi.py"
    }
  ]
}